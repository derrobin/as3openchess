<?xml version="1.0" encoding="utf-8"?>
<mx:ApplicationControlBar xmlns:mx="http://www.adobe.com/2006/mxml"
	width="100%"
	dock="true"
	paddingTop="0"
	paddingBottom="0"
>

	<mx:MenuBar id="myMenuBar" labelField="@label">
		<mx:XMLList>
			<menuitem label="Chessboard Menu">
				<menuitem label="New Game" />
				<menuitem type="separator" />
				<menuitem label="Load Game" />
				<menuitem label="Save Game" />
				<menuitem label="Recent Games..">
					<menuitem label="Game Name 0 | xxxx/xx/xx | Open Result" />
					<menuitem label="Game Name 1 | xxxx/xx/xx | Open Result" />
					<menuitem label="Game Name 2 | 2010/10/10 | Win" />
					<menuitem label="Game Name 3 | 2010/10/10 | Win" />
					<menuitem label="Game Name 4 | 2010/10/10 | Loose" />
				</menuitem>
				<menuitem type="separator" />
				<menuitem label="Export Game as..">
					<menuitem label="Format 1" />
					<menuitem label="Format 2" />
					<menuitem label="Format 3" />
				</menuitem>
				<menuitem label="Import Game from..">
					<menuitem label="Format 1" />
					<menuitem label="Format 2" />
					<menuitem label="Format 3" />
				</menuitem>
			</menuitem>
			<menuitem label="Settings">
				<menuitem label="Game Colors" />
				<menuitem label="Board Size" />
				<menuitem label="Panels..">
					<menuitem label="Move History" type="check" toggled="true" />
					<menuitem label="Taken Pieces" type="check" toggled="true" />
				</menuitem>
				<menuitem label="Piece Style" />
				<menuitem label="Board Style" />
			</menuitem>
			<menuitem label="Help">
				<menuitem label="Search.." />
				<menuitem label="Show Themes" />
			</menuitem>
			<menuitem label="Info">
				<menuitem label="About" />
			</menuitem>
		</mx:XMLList>
	</mx:MenuBar>
</mx:ApplicationControlBar>