<?xml version="1.0" encoding="utf-8"?>
<mx:Box xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:components="de.robinz.as3.pcc.chessboard.view.views.*"
	xmlns:flexunit="flexunit.flexui.*"
>

	<mx:Script>
		<![CDATA[

			[Bindable]
			private var _mainHeight : int = 700;
			[Bindable]
			private var _mainWidth : int = 1000;

			[Embed(source='../../fonts/Alpha.ttf',fontName='font1',mimeType='application/x-font')]
			private var font1 : Class;

			public function set mainWidth( value : int ) : void {
				this._mainWidth = value;
			}
			public function get mainWidth() : int {
				return this._mainWidth;
			}

			public function set mainHeight( value : int ) : void {
				this._mainHeight = value;
			}
			public function get mainHeight() : int {
				return this._mainHeight;
			}


		]]>
	</mx:Script>

	<mx:Style>

		.pieceContainer {
			verticalAlign: middle;
			horizontalAlign: center;
		}
		.piece {
			fontFamily: font1;
			fontSize: 25pt;
		}

	</mx:Style>

	<mx:ApplicationControlBar width="100%" dock="true" paddingTop="0" paddingBottom="0">

		<mx:MenuBar id="myMenuBar" labelField="@label">
			<mx:XMLList>
				<menuitem label="Chessboard Menu">
					<menuitem label="New Game" />
					<menuitem type="separator" />
					<menuitem label="Load Game" />
					<menuitem label="Save Game" />
				</menuitem>
				<menuitem label="Settings">
					<menuitem label="Board Size" />
					<menuitem type="separator" />
					<menuitem label="Piece Style" />
					<menuitem label="Board Style" />
				</menuitem>
				<menuitem label="Help">
					<menuitem label="Search.." />
				</menuitem>
				<menuitem label="Info">
					<menuitem label="About" />
				</menuitem>
			</mx:XMLList>
		</mx:MenuBar>
	</mx:ApplicationControlBar>

	<mx:Box width="100%" height="100%"
		paddingLeft="20"
		paddingRight="20"
		paddingBottom="20"
		paddingTop="20"
		verticalAlign="middle"
		horizontalAlign="center"
	>

		<mx:HBox width="{_mainWidth}" height="{_mainHeight}"
			horizontalGap="20"
			verticalGap="20">

			<components:Chessboard id="chessboard" width="100%" height="100%" />

			<mx:VBox width="250" height="100%"
				horizontalGap="20"
				verticalGap="20">

				<mx:Panel width="100%" height="50%" title="Move History">
					<mx:VBox width="100%" height="100%">
						<mx:HBox width="100%" height="25"
							horizontalGap="5"
							verticalGap="5"
							verticalAlign="middle">
							<mx:Spacer width="1" height="1" />
							<mx:Canvas width="15" height="15" backgroundColor="#ffffff">
							</mx:Canvas>
							<mx:Text text="1. Sf1 - f3" />
						</mx:HBox>
						<mx:HBox width="100%" height="25"
							horizontalGap="5"
							verticalGap="5"
							verticalAlign="middle">
							<mx:Spacer width="1" height="1" />
							<mx:Canvas width="15" height="15" backgroundColor="#000000" borderSides="left right top bottom" borderColor="#000000" />
							<mx:Text text="2. Sg8 - h5" />
						</mx:HBox>
					</mx:VBox>
				</mx:Panel>

				<mx:Panel width="100%" height="50%" title="Taken Pieces">
					<mx:VBox width="100%" height="100%">
						<mx:Panel width="100%" height="50%" title="White Pieces" backgroundColor="#eeeeee">
							<mx:HBox width="100%" height="100%">
								<mx:VBox width="45" height="45" styleName="pieceContainer">
									<mx:Text text="p" width="25" height="25" styleName="piece" mouseChildren="false" />
								</mx:VBox>
								<mx:VBox width="45" height="45" styleName="pieceContainer">
									<mx:Text text="h" width="25" height="25" styleName="piece" mouseChildren="false" />
								</mx:VBox>
							</mx:HBox>
						</mx:Panel>
						<mx:HRule width="100%" height="1" />
						<mx:Panel width="100%" height="50%" title="Black Pieces" backgroundColor="#eeeeee">
							<mx:HBox width="100%" height="100%">
								<mx:VBox width="45" height="45" styleName="pieceContainer">
									<mx:Text text="o" width="25" height="25" styleName="piece" mouseChildren="false" />
								</mx:VBox>
								<mx:VBox width="45" height="45" styleName="pieceContainer">
									<mx:Text text="o" width="25" height="25" styleName="piece" mouseChildren="false" />
								</mx:VBox>
								<mx:VBox width="45" height="45" styleName="pieceContainer">
									<mx:Text text="t" width="25" height="25" styleName="piece" mouseChildren="false" />
								</mx:VBox>
							</mx:HBox>
						</mx:Panel>
					</mx:VBox>
				</mx:Panel>

			</mx:VBox>

			<flexunit:TestRunnerBase id="testRunner" width="100%" height="100%" visible="false" includeInLayout="false" />

		</mx:HBox>

	</mx:Box>

</mx:Box>