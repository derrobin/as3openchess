<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml">
	<mx:Script>
		<![CDATA[
		public static const EVENT_CHOOSE_PIECE:String = "choosePiece";

		private function choosePiece():void {
			this.dispatchEvent( new Event( EVENT_CHOOSE_PIECE, true ) );
		}
		]]>
	</mx:Script>

	<mx:Form width="100%" height="100%">
		<mx:FormItem label="Piece:" width="100%">
			<mx:TextInput id="gameName" width="100%"/>
		</mx:FormItem>
	</mx:Form>

	<mx:HBox width="100%"
		horizontalAlign="center"
		horizontalGap="5"

	>
			<mx:Button click="choosePiece();" label="Choose Piece!"/>
	</mx:HBox>

	<mx:Spacer height="5" />

</mx:TitleWindow>